<% if(user) { %>
<!-- Ensure user is logged in to show the form -->
<form action="/posts/new" method="POST">
    <textarea name="content" placeholder="What's happening?"></textarea>
    <button type="submit">Post</button>
</form>
<% } else { %>
<p>
    You need to be logged in to make a post.
    <a href="/users/login">Login here</a>
</p>
<% } %>
