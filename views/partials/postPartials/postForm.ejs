
<!-- Ensure user is logged in to show the form -->
<% if(user) { %>
    <!-- Form for Creating a New Post -->
    <form class="form post-form" action="/posts/new" method="POST" class="post-form">
        <textarea
            name="content"
            placeholder="What's happening?"
            class="input post-input"
            required
        ></textarea>

        <button type="submit" class="btn post-btn">Post</button>
    </form>

<% } else { %>

    <p>
        You need to be logged in to make a post.
        <a href="/accounts/login-page" class="login-link">Login here</a>
    </p>

<% } %>
