<div class="post">
    <!-- Author Info -->
    
    <div class="post-header">
        <!-- Add a default profile pic or use Gravatar -->
        <% if(post.author) { %>
        <h3>
            <a href="/users/<%= post.author._id %>/profile" class="author-link">
                <%= post.author.username.charAt(0).toUpperCase() + post.author.username.slice(1) %>
            </a>
        </h3>
        <% } else { %>
        <h3>Deleted</h3>
        <% } %>
        <span class="post-date"
            ><%= new Date(post.createdAt).toLocaleString() %></span
        >
        <!-- The above will format the date and time nicely -->
    </div>
    <!-- Post Content -->
    <div class="post-content">
        <p><%= post.content %></p>
    </div>

    <!-- Post Interactions (Like, Comment) -->
    <div class="post-interactions">
        <span class="like-action">
            <form action="/posts/<%= post._id %>/like" method="POST">
                <button
                    type="submit"
                    class="action-item likes-button <%= post.userHasLiked ? ' liked' : '' %>"
                >
                    <%= post.likesCount %> Likes
                </button>
            </form>
        </span class="comment-action">
        <a class="action-item comments-action" href="/posts/<%= post._id %>">
            <%= post.commentsCount %> Comments
        </a>

        <% if(user && post.author && user.id == post.author._id) { %>
        <span class="delete-action">
            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <button type="submit" class="action-item delete-btn">Delete</button>
            </form>
        </span>
        <% } %>
    </div>
</div>
